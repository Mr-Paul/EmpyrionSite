<!DOCTYPE = html>
<html>
    <head>
        <% include ../partials/head %>
    </head>
    <body>
        <% include ../partials/navbar %>
        
        <div class="container">
            <% if (typeof(result) != "undefined") { %>
            <table class="table table-striped table-bordered">
                <thead class="bg-dark text-white">
                    <tr>
                        <th>Posted By</th>
                        <th>Content</th>
                        <th>Replies</th>
                    </tr>
                </thead>
                <tbody>
                    <% result.forEach(function(row) { %>
                    <tr>
                        <td><%= row.user_id %><br>
                            <small class="text-muted"><%= row.thread_date.toLocaleString() %></small>
                        </td>
                        <td><%= row.thread_subject %><br>
                            <%= row.thread_body %></td>
                        <td>#</td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
            <% } %>
            <% if (user == false) { %>
                <p>If you would like to make a post please log in or register.</p>
            <% } else { %>
            <form method="post">
                <input class="form-control" type="text" maxlength="255" name="subject" placeholder="Subject">
                <input class="form-control" type="textarea" name="body" placeholder="Body...">
                <button class="btn btn-primary" type="submit">Post</button>
            </form>
            <% } %>
        </div>
        
        <% include ../partials/footer %>
    </body>
</html>